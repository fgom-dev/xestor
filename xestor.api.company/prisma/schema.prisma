generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Company {
  id                 String    @id @default(uuid())
  cnpj               String    @unique
  corporate_name     String
  trading_name       String?
  tax_regime         String
  state_registration String    @unique
  status             String?   @default("a")
  created_at         DateTime? @default(now())
  updated_at         DateTime? @default(now())
  adresses           Address[]
  contacts           Contact[]

  @@map("company")
}

model Address {
  id             String    @id @default(uuid())
  description    String
  public_place   String
  number         String
  complement     String?
  district       String
  county         String
  county_code    String
  federated_unit String
  zip_code       String
  status         String?   @default("a")
  created_at     DateTime? @default(now())
  updated_at     DateTime? @default(now())
  Company        Company?  @relation(fields: [companyId], references: [id])
  companyId      String?

  @@map("address")
}

model Contact {
  id          String    @id @default(uuid())
  description String
  contact     String
  status      String?   @default("a")
  created_at  DateTime? @default(now())
  updated_at  DateTime? @default(now())
  company     Company?  @relation(fields: [companyId], references: [id])
  companyId   String?

  @@map("contact")
}
